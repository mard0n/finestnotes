{
  "name": "@finest/server",
  "type": "module",
  "version": "0.0.1",
  "exports": {
    "./types": "./src/types/index.ts"
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy-r": "wrangler deploy --minify",
    "check-types": "tsc --noEmit",

    "cf-typegen": "wrangler types --env-interface CloudflareBindings",

