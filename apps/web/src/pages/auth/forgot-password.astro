---
import Layout from "@layouts/Layout.astro";

export const prerender = true;

// Check if user is already logged in
if (Astro.locals.user) {
	return Astro.redirect("/");
}
---

<Layout>
	<div class="hero min-h-[calc(100vh-4rem)] bg-base-200">
		<div class="hero-content flex-col lg:flex-row-reverse gap-8 w-full max-w-6xl">
			<div class="text-center lg:text-left flex-1">
				<h1 class="text-5xl font-bold">Forgot your password?</h1>
				<p class="py-6">
					No worries! Enter your email address below and we'll send you a link to reset your password.
				</p>
			</div>
			<div class="card bg-base-100 w-full max-w-sm shrink-0 shadow-2xl">
				<form id="forgot-password-form" class="card-body gap-3">
					<div id="success-message" class="alert alert-success hidden mb-4">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="h-6 w-6 shrink-0 stroke-current"
							fill="none"
							viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						<span id="success-text">Check your email for reset instructions!</span>
					</div>

					<div id="error-message" class="alert alert-error hidden mb-4">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="h-6 w-6 shrink-0 stroke-current"
							fill="none"
							viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						<span id="error-text">Error! Request failed.</span>
					</div>
					
					<div class="form-control w-full">
						<label for="email" class="label mb-1">
							<span class="label-text">Email address</span>
						</label>
						<input
							type="email"
							id="email"
							name="email"
							autocomplete="email"
							placeholder="email@example.com"
							class="input input-bordered w-full"
							required
						/>
						<label class="label mt-1">
							<span class="label-text-alt text-base-content/60">We'll send reset instructions to this email</span>
						</label>
					</div>
					
					<div class="form-control mt-4 w-full">
						<button type="submit" class="btn btn-primary w-full">Send reset link</button>
					</div>
					
					<div class="divider">OR</div>
					
					<div class="text-center">
						<p class="text-sm">
							Remember your password?{" "}
							<a href="/auth/login" class="link link-primary">Sign in</a>
						</p>
					</div>
				</form>
			</div>
		</div>
	</div>
</Layout>

<script>
	import { authClient } from "@utils/auth";

	const form = document.getElementById('forgot-password-form') as HTMLFormElement;
	const errorDiv = document.getElementById('error-message') as HTMLDivElement;
	const errorText = document.getElementById('error-text') as HTMLSpanElement;
	const successDiv = document.getElementById('success-message') as HTMLDivElement;
	const successText = document.getElementById('success-text') as HTMLSpanElement;

	form?.addEventListener('submit', async (e) => {
		e.preventDefault();
		
		// Hide any existing messages
		errorDiv.classList.add('hidden');
		successDiv.classList.add('hidden');

		const formData = new FormData(form);
		const email = formData.get('email') as string;

		if (!email) {
			showError('Please enter your email address');
			return;
		}

		// Show loading state
		const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
		const originalText = submitBtn.textContent;
		submitBtn.disabled = true;
		submitBtn.innerHTML = '<span class="loading loading-spinner"></span> Sending...';

		try {
			// Use better-auth's requestPasswordReset method
			const { data, error } = await authClient.requestPasswordReset({
				email,
				redirectTo: '/auth/reset-password', // Where the user will be redirected after clicking the email link
			});

			if (error) {
				showError(error.message || 'Failed to send reset link. Please try again.');
				submitBtn.disabled = false;
				submitBtn.textContent = originalText || 'Send reset link';
				return;
			}

			// Show success message
			if (successText) {
				successText.textContent = `Password reset link sent to ${email}. Please check your inbox.`;
			}
			successDiv.classList.remove('hidden');
			
			// Clear the form
			form.reset();
			
			// Reset button state
			submitBtn.disabled = false;
			submitBtn.textContent = originalText || 'Send reset link';

		} catch (error: any) {
			console.error('Request password reset error:', error);
			showError(error?.message || 'Failed to send reset link. Please try again.');
			submitBtn.disabled = false;
			submitBtn.textContent = originalText || 'Send reset link';
		}
	});

	function showError(message: string) {
		if (errorText) {
			errorText.textContent = message;
		}
		errorDiv.classList.remove('hidden');
		successDiv.classList.add('hidden');
		setTimeout(() => {
			errorDiv.classList.add('hidden');
		}, 5000);
	}
</script>
