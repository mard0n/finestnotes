---
import Layout from "@layouts/Layout.astro";

export const prerender = false;

const searchQuery = Astro.url.searchParams.get("q") || "";

// Demo search results
const allResults = [
	{
		id: 1,
		type: "page",
		title: "Understanding React Hooks",
		description: "A comprehensive guide to React Hooks including useState, useEffect, and custom hooks.",
		url: "https://example.com/react-hooks",
		highlights: 3,
		createdAt: "2024-10-01T10:30:00Z",
	},
	{
		id: 2,
		type: "note",
		title: "TypeScript Best Practices",
		description: "Always use strict mode, leverage type inference, avoid `any` type...",
		highlights: 0,
		createdAt: "2024-10-03T14:20:00Z",
	},
	{
		id: 3,
		type: "page",
		title: "CSS Grid vs Flexbox",
		description: "Learn when to use CSS Grid and when to use Flexbox for your layouts.",
		url: "https://example.com/css-grid-flexbox",
		highlights: 5,
		createdAt: "2024-10-05T09:15:00Z",
	},
	{
		id: 4,
		type: "page",
		title: "Introduction to WebAssembly",
		description: "WebAssembly is a binary instruction format for a stack-based virtual machine.",
		url: "https://example.com/webassembly-intro",
		highlights: 2,
		createdAt: "2024-10-06T16:45:00Z",
	},
	{
		id: 5,
		type: "note",
		title: "Astro Framework Notes",
		description: "Astro is a modern web framework that ships zero JavaScript by default...",
		highlights: 0,
		createdAt: "2024-10-07T11:30:00Z",
	},
	{
		id: 6,
		type: "page",
		title: "Building Chrome Extensions",
		description: "Step-by-step guide to creating your first Chrome extension with manifest v3.",
		url: "https://example.com/chrome-extensions",
		highlights: 7,
		createdAt: "2024-10-08T13:20:00Z",
	},
];

// Filter results based on search query
const searchResults = searchQuery
	? allResults.filter(
			(result) =>
				result.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
				result.description.toLowerCase().includes(searchQuery.toLowerCase())
	  )
	: allResults;

function formatDate(dateString: string) {
	const date = new Date(dateString);
	return date.toLocaleDateString("en-US", {
		year: "numeric",
		month: "short",
		day: "numeric",
	});
}
---

<Layout>
	<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
		<div class="mb-8">
			<h1 class="text-3xl font-bold text-gray-900 mb-4">Search</h1>
			<form method="GET" action="/search" class="relative">
				<div class="relative">
					<input
						type="text"
						name="q"
						value={searchQuery}
						placeholder="Search notes, pages, and highlights..."
						class="w-full px-4 py-3 pr-12 text-gray-900 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
						autofocus
					/>
					<button
						type="submit"
						class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600"
					>
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
							></path>
						</svg>
					</button>
				</div>
			</form>
			{
				searchQuery && (
					<p class="mt-3 text-sm text-gray-600">
						Found {searchResults.length} {searchResults.length === 1 ? "result" : "results"} for{" "}
						<span class="font-medium">"{searchQuery}"</span>
					</p>
				)
			}
		</div>

		{
			searchResults.length > 0 ? (
				<div class="space-y-4">
					{searchResults.map((result) => (
						<div class="bg-white border border-gray-200 rounded-lg p-5 hover:shadow-md transition-shadow duration-200">
							<div class="flex items-start justify-between">
								<div class="flex-1">
									<div class="flex items-center gap-2 mb-2">
										{result.type === "page" ? (
											<svg
												class="w-5 h-5 text-blue-600"
												fill="none"
												stroke="currentColor"
												viewBox="0 0 24 24"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
												/>
											</svg>
										) : (
											<svg
												class="w-5 h-5 text-green-600"
												fill="none"
												stroke="currentColor"
												viewBox="0 0 24 24"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
												/>
											</svg>
										)}
										<span class="text-xs font-medium text-gray-500 uppercase">
											{result.type}
										</span>
										{result.highlights > 0 && (
											<span class="text-xs text-gray-500">
												â€¢ {result.highlights} {result.highlights === 1 ? "highlight" : "highlights"}
											</span>
										)}
									</div>
									<h3 class="text-lg font-semibold text-gray-900 mb-2">
										{result.type === "page" ? (
											<a
												href={result.url}
												target="_blank"
												rel="noopener noreferrer"
												class="hover:text-blue-600"
											>
												{result.title}
											</a>
										) : (
											<a href={`/notes/${result.id}`} class="hover:text-blue-600">
												{result.title}
											</a>
										)}
									</h3>
									<p class="text-sm text-gray-600 mb-3">{result.description}</p>
									{result.url && (
										<p class="text-xs text-blue-600 hover:underline truncate">
											{result.url}
										</p>
									)}
								</div>
								<span class="text-xs text-gray-500 ml-4 whitespace-nowrap">
									{formatDate(result.createdAt)}
								</span>
							</div>
						</div>
					))}
				</div>
			) : (
				<div class="text-center py-12">
					<svg
						class="mx-auto h-12 w-12 text-gray-400"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
						/>
					</svg>
					<h3 class="mt-2 text-sm font-medium text-gray-900">No results found</h3>
					<p class="mt-1 text-sm text-gray-500">
						{searchQuery
							? `We couldn't find any matches for "${searchQuery}"`
							: "Try searching for notes, pages, or highlights"}
					</p>
				</div>
			)
		}
	</div>
</Layout>
