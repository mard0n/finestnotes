---
import Layout from "@layouts/Layout.astro";
import { client } from "@utils/api";
import { parseResponse } from "hono/client";

export const prerender = false;

const searchQuery = Astro.url.searchParams.get("q") || "";

let searchResults: any[] = [];
let total = 0;
let hasMore = false;

if (searchQuery) {
  try {
    const res = await client.api.search.$get({
      query: {
        q: searchQuery,
        page: "1",
        limit: "20",
      },
    });
    const data = await parseResponse(res);
    searchResults = data.results;
    total = data.total;
    hasMore = data.hasMore;
  } catch (error) {
    console.error("Search error:", error);
  }
}

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}

function highlightText(text: string, query: string): string {
  if (!query || !text) return text;
  
  const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
  return text.replace(regex, '<mark class="bg-yellow-200 px-0.5">$1</mark>');
}

function getExcerpt(text: string | null | undefined, query: string, maxLength: number = 200): string {
  if (!text) return "";
  
  if (!query) {
    return text.length > maxLength ? text.substring(0, maxLength) + "..." : text;
  }
  
  const lowerText = text.toLowerCase();
  const lowerQuery = query.toLowerCase();
  const index = lowerText.indexOf(lowerQuery);
  
  if (index === -1) {
    return text.length > maxLength ? text.substring(0, maxLength) + "..." : text;
  }
  
  const start = Math.max(0, index - 50);
  const end = Math.min(text.length, index + query.length + 150);
  
  let excerpt = text.substring(start, end);
  if (start > 0) excerpt = "..." + excerpt;
  if (end < text.length) excerpt = excerpt + "...";
  
  return excerpt;
}
---

<Layout>
	<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
		<div class="mb-8">
			<h1 class="text-3xl font-bold text-gray-900 mb-4">Search</h1>
			<form method="GET" action="/search" class="relative">
				<div class="relative">
					<input
						type="text"
						name="q"
						value={searchQuery}
						placeholder="Search notes, pages, and highlights..."
						class="w-full px-4 py-3 pr-12 text-gray-900 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
						autofocus
					/>
					<button
						type="submit"
						class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600"
					>
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
							></path>
						</svg>
					</button>
				</div>
			</form>
			{
				searchQuery && (
					<p class="mt-3 text-sm text-gray-600">
						Found {total} {total === 1 ? "result" : "results"} for{" "}
						<span class="font-medium">"{searchQuery}"</span>
					</p>
				)
			}
		</div>

		{
			searchResults.length > 0 ? (
				<div class="space-y-4">
					{searchResults.map((result) => {
						const contentText = result.type === "note" 
							? result.content 
							: result.description;
						const excerpt = getExcerpt(contentText, searchQuery);
						const highlightedTitle = highlightText(result.title, searchQuery);
						const highlightedExcerpt = highlightText(excerpt, searchQuery);
						
						return (
							<div class="bg-white border border-gray-200 rounded-lg p-5 hover:shadow-md transition-shadow duration-200">
								<div class="flex items-start justify-between">
									<div class="flex-1">
										<div class="flex items-center gap-2 mb-2">
											{result.type === "page" ? (
												<svg
													class="w-5 h-5 text-blue-600"
													fill="none"
													stroke="currentColor"
													viewBox="0 0 24 24"
												>
													<path
														stroke-linecap="round"
														stroke-linejoin="round"
														stroke-width="2"
														d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
													/>
												</svg>
											) : (
												<svg
													class="w-5 h-5 text-green-600"
													fill="none"
													stroke="currentColor"
													viewBox="0 0 24 24"
												>
													<path
														stroke-linecap="round"
														stroke-linejoin="round"
														stroke-width="2"
														d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
													/>
												</svg>
											)}
											<span class="text-xs font-medium text-gray-500 uppercase">
												{result.type}
											</span>
											{result.type === "page" && result.annotations?.length > 0 && (
												<span class="text-xs text-gray-500">
													â€¢ {result.annotations.length} {result.annotations.length === 1 ? "annotation" : "annotations"}
												</span>
											)}
										</div>
										<h3 class="text-lg font-semibold text-gray-900 mb-2">
											{result.type === "page" ? (
												<a
													href={`/article/${result.id}`}
													class="hover:text-blue-600"
													set:html={highlightedTitle}
												/>
											) : (
												<a 
													href={`/article/${result.id}`} 
													class="hover:text-blue-600"
													set:html={highlightedTitle}
												/>
											)}
										</h3>
										<p class="text-sm text-gray-600 mb-3" set:html={highlightedExcerpt}></p>
										{result.url && (
											<p class="text-xs text-blue-600 hover:underline truncate">
												{result.url}
											</p>
										)}
										{result.projects && result.projects.length > 0 && (
											<div class="mt-2 flex gap-2 flex-wrap">
												{result.projects.map((project: any) => (
													<span class="badge badge-sm text-xs text-black badge-outline rounded-full border-base-300">
														{project.name}
													</span>
												))}
											</div>
										)}
									</div>
									<span class="text-xs text-gray-500 ml-4 whitespace-nowrap">
										{formatDate(result.createdAt)}
									</span>
								</div>
							</div>
						);
					})}
				</div>
			) : (
				<div class="text-center py-12">
					<svg
						class="mx-auto h-12 w-12 text-gray-400"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
						/>
					</svg>
					<h3 class="mt-2 text-sm font-medium text-gray-900">No results found</h3>
					<p class="mt-1 text-sm text-gray-500">
						{searchQuery
							? `We couldn't find any matches for "${searchQuery}"`
							: "Try searching for notes, pages, or highlights"}
					</p>
				</div>
			)
		}
	</div>
</Layout>
