---
import ArticleCard from "@components/ArticleCard";
import Layout from "@layouts/Layout.astro";
import { createServerClient } from "@utils/api";
import { parseResponse } from "hono/client";

export const prerender = false;

const searchQuery = Astro.url.searchParams.get("q") || "";

const client = createServerClient(Astro.request.headers);

const res = await client.api.search.$get({
  query: {
    q: searchQuery,
    page: "1",
    limit: "20",
  },
});
const data = await parseResponse(res);
const searchResults = data.results;
const total = data.total;
const hasMore = data.hasMore;
---

<Layout>
  <main class="flex">
    <div
      class="invisible hidden md:block ml-4 md:ml-8 font-serif font-bold text-xl whitespace-nowrap"
    >
      <a href="/" class="hidden xl:block">Finest Notes</a>
      <a href="/" class="block xl:hidden">FN</a>
    </div>
    <div class="mx-4 md:mx-8 grow">
      {
        searchQuery && searchResults.length > 0 && (
          <p class="my-6 md:my-8 text-sm text-content-light">
            Found {total} {total === 1 ? "result" : "results"} for{" "}
            <span class="font-medium">"{searchQuery}"</span>
          </p>
        )
      }

      {
        searchResults.length > 0 ? (
          <ul class="list rounded-none">
            {searchResults.map((result) => {
              return (
                <ArticleCard
                  note={result}
                  projects={[]}
                  userId={Astro.locals.user?.id}
                />
              );
            })}
          </ul>
        ) : (
          <div class="text-center py-12">
            <svg
              class="mx-auto h-12 w-12 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">
              No results found
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              {searchQuery
                ? `We couldn't find any matches for "${searchQuery}"`
                : "Try searching for notes, pages, or highlights"}
            </p>
          </div>
        )
      }
    </div>
    <div
      class="invisible hidden md:block ml-4 md:ml-8 font-serif font-bold text-xl whitespace-nowrap"
    >
      <a href="/" class="hidden xl:block">Finest Notes</a>
      <a href="/" class="block xl:hidden">FN</a>
    </div>
  </main>
</Layout>
