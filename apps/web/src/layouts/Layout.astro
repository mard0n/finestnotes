---
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-franklin";
import libreBaskervilleWoff2 from "@fontsource/libre-baskerville/files/libre-baskerville-latin-400-normal.woff2?url";
import libreFranklinWoff2 from "@fontsource/libre-franklin/files/libre-franklin-latin-400-normal.woff2?url";
import Navbar from "@components/Navbar.astro";
---

<!doctype html>
<html lang="en" data-theme="finest">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<link
			rel="preload"
			as="font"
			type="font/woff2"
			href={libreFranklinWoff2}
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			as="font"
			type="font/woff2"
			href={libreBaskervilleWoff2}
			crossorigin="anonymous"
		/>
	</head>
	<body class="bg-base-200">
		<slot name="navbar">
			<Navbar />
		</slot>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
