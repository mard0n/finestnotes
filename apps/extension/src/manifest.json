{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background/index.ts",
    "{{firefox}}.scripts": ["src/background/index.ts"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts", "src/content/highlight-on-load.ts"]
    }
  ],
  "commands": {
    "highlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Highlight selected text"
    }
  },
  "permissions": [
    "storage"
  ]
}
